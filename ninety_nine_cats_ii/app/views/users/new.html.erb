<section class="page">
  <div class="centered-box">
    <h1>New User</h1>

    <% if flash.now[:errors] %>
      <% flash.now[:errors].each do |error| %>
        <%= error %>
      <% end %>
    <% end %>

    <form action="users_url" method="post">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

      <h1>Sign Up</h1>
      <label>
        <h3>Username</h3>
        <input type="text" name="user[user_name]" value="<%= @user.username %>">
      </label>
      <br>
      <label>
        <h3>Password</h3>
        <input type="text" name="user[password]" value="<%= @user.password %>">
      </label>
      <br>

      <input type="submit" value="Sign Up">
    </form>
  </div>
</section>
